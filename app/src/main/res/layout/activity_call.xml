<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red_brown"
    tools:context=".call">

    <ImageView
        android:id="@+id/group_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"
        android:src="@drawable/status_bar"/>

    <ImageView
        android:id="@+id/image"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/rounded_button_more_more"
        android:src="@drawable/omar_sheikh"
        android:scaleType="fitXY"
        android:clipToOutline="true">
    </ImageView>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Omar ðŸ™‚"
        android:textSize="35dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_margin="18dp">
    </TextView>

    <TextView
        android:id="@+id/callStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Ready to call"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:layout_margin="18dp">
    </TextView>

    <!-- Video containers for local and remote video -->
    <FrameLayout
        android:id="@+id/remoteVideoContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/black"
        android:visibility="gone"/>

    <FrameLayout
        android:id="@+id/localVideoContainer"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/group_1"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/brown"
        android:elevation="8dp"
        android:visibility="gone"/>

    <!-- Call control buttons at bottom -->
    <LinearLayout
        android:id="@+id/callControlsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp">

        <!-- Mute button -->
        <ImageButton
            android:id="@+id/muteBtn"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_button_more"
            android:backgroundTint="@color/brown"
            android:src="@android:drawable/ic_btn_speak_now"
            android:scaleType="centerInside"
            android:padding="12dp"
            android:contentDescription="Mute microphone"/>

        <!-- Video toggle button -->
        <ImageButton
            android:id="@+id/videoBtn"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_button_more"
            android:backgroundTint="@color/brown"
            android:src="@android:drawable/ic_menu_camera"
            android:scaleType="centerInside"
            android:padding="12dp"
            android:contentDescription="Toggle video"/>

        <!-- End call button -->
        <ImageButton
            android:id="@+id/callEnd"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="8dp"
            android:src="@drawable/end_call"
            android:scaleType="fitXY"
            android:background="@drawable/end_call_button_background"
            android:contentDescription="End call"/>

        <!-- Switch camera button -->
        <ImageButton
            android:id="@+id/switchCameraBtn"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_button_more"
            android:backgroundTint="@color/brown"
            android:src="@android:drawable/ic_menu_rotate"
            android:scaleType="centerInside"
            android:padding="12dp"
            android:contentDescription="Switch camera"/>

        <!-- Speaker button -->
        <ImageButton
            android:id="@+id/speakerBtn"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_button_more"
            android:backgroundTint="@color/brown"
            android:src="@android:drawable/ic_lock_silent_mode_off"
            android:scaleType="centerInside"
            android:padding="12dp"
            android:contentDescription="Toggle speaker"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>